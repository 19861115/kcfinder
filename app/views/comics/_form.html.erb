<%= form_for @comic do |f| %>
  <div class="form-group">
    <%= f.label :asin, :class => 'control-label' %>
    <%= f.text_field :asin, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :image_path, :class => 'control-label' %>
    <%= f.text_field :image_path, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :author_id, :class => 'control-label' %>
    <%= f.number_field :author_id, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :publisher_id, :class => 'control-label' %>
    <%= f.number_field :publisher_id, :class => 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                comics_path, :class => 'btn' %>
  </div>
<% end %>
