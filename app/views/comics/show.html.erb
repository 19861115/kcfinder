<%- model_class = Comic -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:asin) %>:</strong></dt>
  <dd><%= @comic.asin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_path) %>:</strong></dt>
  <dd><%= @comic.image_path %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author_id) %>:</strong></dt>
  <dd><%= @comic.author_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publisher_id) %>:</strong></dt>
  <dd><%= @comic.publisher_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              comics_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_comic_path(@comic), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              comic_path(@comic),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
